ACCOUNT_ID=$(aws sts get-caller-identity --query Account --output text)
eval $(aws sts get-session-token \
  --output text \
  --query 'join(` `, [
    `AWS_ACCESS_KEY_ID=`,
    Credentials.AccessKeyId,
    `\nAWS_SECRET_ACCESS_KEY=`,
    Credentials.SecretAccessKey,
    `\nAWS_SESSION_TOKEN=`,
    Credentials.SessionToken, `\n`])')

echo "INFO: profile aws-account-destroyer set to destroy account $ACCOUNT_ID"
aws sts get-caller-identity 

sed -e "s/{{ACCOUNT_ID}}/$ACCOUNT_ID/g" aws-nuke.yaml.template > aws-nuke.yaml

docker run \
    --rm -it \
    -v $PWD:/wrk -w /wrk \
    -v $HOME/.aws:/home/aws-nuke/.aws:ro \
    quay.io/rebuy/aws-nuke:latest \
    	--config aws-nuke.yaml \
	--force-sleep 60 \
        --access-key-id $AWS_ACCESS_KEY_ID \
        --secret-access-key $AWS_SECRET_ACCESS_KEY \
        --session-token $AWS_SESSION_TOKEN \
	$@
